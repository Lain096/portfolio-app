---
import Badge from './Badge.astro';
import Links from './Links.astro';

interface Props {
  date: string;
  title: string;
  place: string;
  description: string;
  link?: string;
  link_description?: string;
}
const { date, title, place, description, link, link_description } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time
  class="mb-1 text-sm lg:text-base font-normal leading-none text-gray-500 dark:text-gray-500"
  >{date}</time
>
<h3 class="text-xl lg:text-2xl font-semibold text-blue-100 dark:text-white mt-2">
  {title}
</h3>
<p class="mb-4 text-base lg:text-xl  text-gray-200 text-pretty">
  {description}
</p>
<p class="mb-2 text-sm lg:text-base font-normal text-sky-200/90 dark:text-gray-400">
  {place}
</p>
{
  link && (

  <Links>
    <a
      href={link}
    >
      {link_description}{" "}
    </a>
  </Links>
  )
}
